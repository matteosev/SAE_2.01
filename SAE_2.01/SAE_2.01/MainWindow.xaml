<Window
    x:Class="SAE_2._01.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_2._01"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1200"
    Height="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ListView x:Name="lv">
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                            Width="250"
                            DisplayMemberBinding="{Binding date_emprunt}"
                            Header="date" />
                        <GridViewColumn
                            Width="250"
                            DisplayMemberBinding="{Binding nom}"
                            Header="employé" />
                        <GridViewColumn
                            Width="250"
                            DisplayMemberBinding="{Binding libelle_vehicule}"
                            Header="véhicule" />
                    </GridView>
                </ListView.View>
            </ListView>
            <Rectangle
                Grid.Column="1"
                Width="370"
                Height="600"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Stroke="Black" />
            <Label
                Grid.Column="1"
                Width="72"
                Height="25"
                Margin="174,82,154,520"
                Content="Rechercher" />

            <ListView
                x:Name="lvRechercher"
                Grid.Column="1"
                Margin="30,30,292,272">
                <ListViewItem Content="date" />
                <ListViewItem Content="employé" />
                <ListViewItem Content="véhicule" />
            </ListView>
            <Button
                Grid.Column="1"
                Margin="15,450,15,140"
                Content="Consulter" />
            <Button
                x:Name="btnModifier"
                Grid.Column="1"
                Margin="15,492,15,98"
                Content="Modifier" />
            <Button
                x:Name="btnSupprimer"
                Grid.Column="1"
                Margin="15,534,15,56"
                Content="Supprimer" />
            <TextBox
                Grid.Column="1"
                Margin="378,210,22,386"
                TextWrapping="Wrap" />
        </Grid>
        <Grid Grid.Row="1">
            <Rectangle Margin="10,10,10,10" Stroke="Black" />
            <Label
                Width="37"
                Height="28"
                Margin="30,24,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Date :" />
            <TextBox
                x:Name="txtDate"
                Width="120"
                Margin="81,29,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="{Binding Ville}"
                TextWrapping="Wrap" />
            <Label
                Margin="265,29,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="mission concernée :" />
            <TextBox
                x:Name="txtMission"
                Width="120"
                Margin="384,33,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text=""
                TextWrapping="Wrap" />
            <Button
                Margin="439,79,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Créer" />
            <Label
                Margin="21,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Employé" />
            <Label
                Margin="30,103,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Véhicule" />
            <TextBox
                x:Name="txtEmploye"
                Width="120"
                Margin="81,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                TextWrapping="Wrap" />
            <TextBox
                x:Name="txtVehicule"
                Width="120"
                Margin="89,111,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
        </Grid>
    </Grid>
</Window>
